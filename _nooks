# Function to extract tags from ~/.nooks file
_nooks_tags() {
  local -a tags
  tags=($(awk '{print $1}' ~/.nooks))
  _describe 'tag' tags
}

# Autocompletion function for nooks
nookscompletion() {
  local state
  local -a options
  options=(
    '-s[Save the current directory with an mark NAME]'
    '--save-mark[Save the current directory with an mark NAME]'
    '-a[Show all saved directories]'
    '--all[Show all saved directories]'
    '-h[Display help and exit]'
    '--help[Display help and exit]'
    '-q[Quiet mode]'
    '--quiet[Quiet mode]'
  )

  _arguments -s -C \
    "$options[@]" \
    "*:: :_nooks_tags" \
    && return 0
}

compdef nookscompletion nooks
